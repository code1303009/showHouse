.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  box-sizing:border-box;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 80%;
  height: 60%;
  overflow: hidden;
  box-sizing:border-box;
  position: fixed;
  top: 20%;
  left: 10%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
}

.alert-image{
  width:90%;
  height:60%;
  animation-fill-mode:scaleToFill;
  padding-top: 5%;
  padding-left: 5%;
  color: gray;
}

.modal-title {
  padding-top: 15rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-price{
  padding-top: 5rpx;
  font-size: 30rpx;
  color: #030303;
  text-align: center;
}

.modal-description{
  padding-top: 10rpx;
  padding-left: 5%;
  padding-right: 5%;
  font-size: 22rpx;
  color: #030303;
  text-align: center;
