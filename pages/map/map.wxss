.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 80%;
  height: 60%;
  overflow: hidden;
  position: fixed;
  top: 20%;
  left: 10%;
  z-index: 9999;
  background: #f9f9f9;
  border-radius: 36rpx;
}

.alert-image{
  width:90%;
  height:60%;
  animation-fill-mode:scaleToFill;
  padding-top: 5%;
  padding-left: 5%;
  color: gray;
}

.modal-title {
  padding-top: 15rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-price{
  padding-top: 5rpx;
  font-size: 30rpx;
  color: #030303;
  text-align: center;
}

.modal-description{
  padding-top: 5rpx;
  font-size: 18rpx;
  color: #030303;
  text-align: center;
}